#ifndef client_H_
#define client_H_

#define TRUE 1
#define FALSE 0
#define NAME_SIZE 51
#define FLOAT_MIN 0
#define FLOAT_MAX 999999.000
#define INT_MIN 0
#define INT_MAX 999999
#define ARRAY_SIZE 100

typedef struct
{
	int id;
	char name[NAME_SIZE];
	float numberFloat;
	int numberInt;
	int isEmpty;
}Client;

int client_init(Client* list, int len);
int client_add(Client *list, int len);
int client_modify(Client *list, int len);
int client_remove(Client *list, int len);
int client_report(Client *list, int len);

int client_print(Client *list, int len);
int client_searchForNoEmpty(Client *list, int len);
int client_searchEmpty(Client *list, int len, int *pIndex);
int client_findById(Client *list, int len, int id);
int client_sort(Client *list, int len, int order);

#endif
