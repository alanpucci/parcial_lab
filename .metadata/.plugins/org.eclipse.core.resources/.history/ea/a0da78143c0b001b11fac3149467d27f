#ifndef fantasmaVinculado_H_
#define fantasmaVinculado_H_
#include "cliente.h"

#define TRUE 1
#define FALSE 0
#define NAME_SIZE 51
#define FLOAT_MIN 0
#define FLOAT_MAX 999999.000
#define INT_MIN 0
#define INT_MAX 999999
#define ARRAY_SIZE 100

typedef struct
{
	int id;
	char name[NAME_SIZE];
	float numberFloat;
	int numberInt;
	int isEmpty;
}Vinculado;

int vinculado_init(Vinculado* list, int len);
int vinculado_add(Vinculado *list, int len, Fantasma *fantasmaList, int fantasmaLen);
int vinculado_modify(Vinculado *list, int len);
int vinculado_remove(Vinculado *list, int len);
int vinculado_report(Vinculado *list, int len);

int vinculado_searchForNoEmpty(Vinculado *list, int len);
int vinculado_searchEmpty(Vinculado *list, int len, int *pIndex);
int vinculado_findById(Vinculado *list, int len, int id);
int vinculado_print(Vinculado *list, int len);
int vinculado_sort(Vinculado *list, int len, int order);

#endif
