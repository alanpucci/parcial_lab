#ifndef arrayFantasma_H_
#define arrayFantasma_H_

#define TRUE 1
#define FALSE 0
#define NAME_SIZE 51
#define FLOAT_MIN 0
#define FLOAT_MAX 999999.000
#define INT_MIN 0
#define INT_MAX 999999
#define ARRAY_SIZE 100

typedef struct
{
	int id;
	char name[NAME_SIZE];
	float numberFloat;
	int numberInt;
	int isEmpty;
}Fantasma;

int fantasma_init(Fantasma* list, int len);
int fantasma_add(Fantasma *list, int len);
int fantasma_modify(Fantasma *list, int len);
int fantasma_remove(Fantasma *list, int len);
int fantasma_report(Fantasma *list, int len);

int fantasma_print(Fantasma *list, int len);
int fantasma_searchForNoEmpty(Fantasma *list, int len);
int fantasma_searchEmpty(Fantasma *list, int len, int *pIndex);
int fantasma_findById(Fantasma *list, int len, int id);
int fantasma_sort(Fantasma *list, int len, int order);

#endif
